<body id="background-admin-reg">
    <!--Formulario registro de servicios-->
    <div class="container">
        <h2 class="d-flex justify-content-center pt-3">Registrar Servicio</h2>
        <div class="container w-50">
            <form action="registrarServicio" method="POST">
                <div class="col">
                    <label for="Codigo" class="form-label">Codigo :</label>
                    <input type="text" class="form-control" id="Codigo" name="Codigo" inputmode="text"
                        minlength="10" required>
                </div>

                <div class="col">
                    <label for="Nombre" class="form-label">Nombre:</label>
                    <input type="text" class="form-control" id="Nombre" name="Nombre"
                    maxlength="100" required>
                </div>

                <div class="col">
                    <label for="Descripcion" class="form-label">Descripcion:</label>
                    <textarea name="Descripcion" id="" cols="30" rows="10" class="form-control"></textarea>
                </div>

                <button type="submit" class="btn btn-outline-primary mt-3">Registrar Servicio</button>
                <div class="mt-2">
                    <a href="/admin" class="btn btn-outline-dark mb-2">Volver</a>
                </div>
            </form>
        </div>



    </div>


    </div>

